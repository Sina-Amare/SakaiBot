# SakaiBot Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Telegram Configuration
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890
TELEGRAM_SESSION_NAME=sakaibot_session

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL_NAME=deepseek/deepseek-chat
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MAX_TOKENS=1500
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TIMEOUT=30
OPENROUTER_MAX_RETRIES=3

# UserBot Configuration
USERBOT_MAX_ANALYZE_MESSAGES=5000
USERBOT_MAX_MESSAGE_LENGTH=4096
USERBOT_CONFIRMATION_KEYWORD=confirm
USERBOT_DEFAULT_TTS_VOICE=fa-IR-DilaraNeural

# Path Configuration (optional - defaults will be used if not specified)
# PATH_FFMPEG_EXECUTABLE=/usr/local/bin/ffmpeg
# PATH_CACHE_DIR=cache
# PATH_LOGS_DIR=logs
# PATH_SESSION_DIR=.

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING_FILE_NAME=sakaibot.log
LOGGING_MAX_FILE_SIZE=10485760
LOGGING_BACKUP_COUNT=5

# Optional API Keys
# ASSEMBLYAI_API_KEY=your_assemblyai_key_here
# ELEVENLABS_API_KEY=your_elevenlabs_key_here